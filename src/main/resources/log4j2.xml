<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="rlgagent" packages="">
    <!-- Logging Properties -->
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%t] %p %m%n</Property>
        <Property name="APP_LOG_ROOT">${sys:workspace}</Property>
    </Properties>

    <Appenders>
        <File name="MyFile" fileName="${APP_LOG_ROOT}/rlgagent.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="MyFile"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
